<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff5f5"
    tools:context=".TeamChoiceActivity">

    <ImageView
        android:id="@+id/team_choice"
        android:layout_width="match_parent"
        android:layout_height="270dp"
        android:src="@drawable/back_teamchoice_top" />

    <Button
        android:id="@+id/teamChoice_teamBlue_btn"
        android:layout_width="326dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/back_teamblue"
        android:gravity="center"
        android:text="Team_Blue"
        android:textColor="#ffffff"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/team_choice" />

    <Button
        android:id="@+id/teamChoice_teamGreen_btn"
        android:layout_width="326dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/back_teamgreen"
        android:gravity="center"
        android:text="Team_Blue"
        android:textColor="#ffffff"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamChoice_teamBlue_btn" />

    <Button
        android:id="@+id/teamChoice_teamYellow_btn"
        android:layout_width="326dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/back_teamyellow"
        android:gravity="center"
        android:text="Team_Yellow"
        android:textColor="#ffffff"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamChoice_teamGreen_btn" />

    <Button
        android:id="@+id/teamChoice_teamViolet_btn"
        android:layout_width="326dp"
        android:layout_height="74dp"
        android:layout_marginEnd="8dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="23dp"
        android:background="@drawable/back_teamviolet"
        android:gravity="center"
        android:text="Team_Violet"
        android:textColor="#ffffff"
        android:textSize="33sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/teamChoice_teamYellow_btn" />


</android.support.constraint.ConstraintLayout>